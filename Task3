#include <stdio.h>


int main() {
    //объявление переменных
    float a;
    float b;
    float i = 0;


    //Ввод
    printf("Введите длинну А: ");
    scanf("%f", &a);
    printf("Введите длинну B: ");
    scanf("%f", &b);
                 if (b < 0) {
               printf("NoNoNoNoNoNoNoNoNo ");
        } else {
                 if (a < 0) {
            printf("NoNoNoNoNoNoNoNoNo ");
        } else {

                 while (b <= a) {
                  a = a - b;
                  i = i + 1;
            }


            //Вывод
            printf("Кол-во отрезков B в отрезке A: ");
            printf("%.0f", i);


            return 0;
        }
    }
}
